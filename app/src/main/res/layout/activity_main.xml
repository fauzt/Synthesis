<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background">

    <Button
        android:id="@+id/buttonDiscover"
        android:onClick="goDiscover"
        style="@style/ButtonStyle"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-light"
        android:text="discover"
        android:typeface="sans"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/buttonStartNew"
        style="@style/ButtonStyle"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-light"
        android:text="start new project"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDiscover"
        app:layout_constraintBottom_toTopOf="@+id/buttonViewProjects"/>

    <Button
        android:id="@+id/buttonViewProjects"
        style="@style/ButtonStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-light"
        android:text="view my projects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonViewSounds"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartNew" />

    <Button
        android:id="@+id/buttonViewSounds"
        style="@style/ButtonStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="view my sounds"
        app:layout_constraintTop_toBottomOf="@id/buttonViewProjects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSetting"
        style="@style/ButtonStyle"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-light"
        android:text="settings"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>